
header
  position absolute
  width 100%
  height 100px
  z-index 9
  background-color: rgba(38,50,56,0.3)

.header-content
  width 100%
  height 100%
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  justify-content space-between
  .header-logo
    width 60%
    text-align center
    h1
      color #ffff00
      font-size 28px
      margin-top 34px
      margin-left 20px
      text-align justify
      font-family 'Great Vibes', cursive
      width 100%
  .header-menu--burger
    width 40%

.icon-menu--content
	width 25px
	height 18px
	cursor pointer
	outline none
	margin 41px 40px 0 auto
	display block

.icon-menu
	display inline-block
	margin-top 0
	outline none
	small
		display block
		border-radius 3em
		width 24px
		height 4px
		margin 0 0 3px 0
		background-color #ffff00
		transition all .3s ease-in-out
	&:hover
		outline none

.icon-menu--active
	small:nth-child(1)
		transform rotate(45deg) translateY(6px) translateX(4.5px)
		width 24px
		height 5px
		background-color #DA5555
	small:nth-child(2)
		width 0
		height 0
	small:nth-child(3)
		transform rotate(-45deg) translateY(-1px)		
		background-color #DA5555		
		width 24px
		height 5px

.overlay-menu
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	background-color rgba(38,50,56,0.8);
	z-index 7
	display none

nav.menu-options
	position absolute
	width 100%
	height auto
	top 50%
	margin-top -25%
	margin-left 0.1px
	ul
		padding 0
		margin 0
		text-align center
		li
			list-style none
			height 45px
			line-height 45px
			transition all 0.3s ease-in-out
			a
				display block
				width 100%
				height 100%
				text-decoration none
				color #ffff00
				font-size 23px
				font-weight 600
				text-transform uppercase
				transition all 0.3s ease-in-out
				font-family "Roboto", sans-serif
				&:hover
					transform scale(1.2)

.overlay-reserva
  display none
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(255,255,255,0.96)
  z-index 1001
  overflow-y auto
  &--contenedor
    position relative
    width 100%
    height 100%
    .cerrar, .ubicacion
      position fixed
      top 20px
      right 15px
      width 40px
      height 40px
      border-radius 50%
      background-color #DA5555
      color #fff
      text-align center
      line-height 60px
      z-index 1003
      cursor pointer
    .ubicacion
      left 15px
      background-color rgb(6,71,192)  

.contenedor-reservas
  /*position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)*/
  width 100%
  height auto

.contenedor-reservas--formulario
  width 70%
  margin 70px auto
  height 100%
  h1
    font-size 28px
    font-family "Baloo Bhai", cursive
    color rgb(6,71,192)
    text-align center
  p
    font-size 16px
    font-family "Roboto", sans-serif
    text-align center
    margin 4px 0
  p.contacto
    font-family "Roboto", sans-serif
    color rgb(6,71,192)
    font-size 14px
    font-weight 700
  form
    margin-top 20px
    font-size 16px
    font-family "Roboto", sans-serif

.contenedor-campo
  margin 14px 0
  input, select
    width 96%
    height 35px
    border none
    border 1.5px solid rgba(0,0,0,0.15)
    border-radius 4px
    margin-top 4px
    text-align center
    padding 0 3px
    transition all .3s ease-in-out
    font-size 16px
    &:focus
      border-color rgba(1,83,134,0.5)
      outline none
  select
    height 40px
    padding 0
    width 99%
  button
    border none
    border-radius 4px
    background-color rgb(6,71,192)
    color #fff
    width 120px
    height 40px
    font-family "Roboto", sans-serif
    font-size 16px
    cursor pointer

.contenedor-mensaje
  display none
  position absolute
  top 10px
  left 50%
  transform translate(-50%, 0)
  width 300px
  height auto
  padding 20px
  border-radius 4px
  background-color #263238
  z-index 1004
  p
    color #fff
    font-family "Roboto", sans-serif
    font-size 16px

.overlay
  display none

.slide-titulo
   //font-family 'Baloo Bhai', cursive
   font-family 'Great Vibes', cursive
   color #ffff00

.ofertas
  background-color #fff
  width 100%
  height auto
  padding 55px 0
  position relative
	
.ofertas-content
	width 90%
	height auto
	margin 0 auto
	h2
		font-family "Great Vibes", cursive
		font-size 30px
		text-align center
	.caja
		width 100%
		height 300px
		border-bottom 1px solid rgba(0,0,0,0.1)
		padding 10px 0
		margin-top 30px
		img
			width 100%
			height 250px 
		.boton
			margin-top 5px
			width auto
			height 40px
			line-height 40px
			background-color #F18F01
			border-radius 4px
			overflow hidden
			text-align center
			a
				text-decoration none
				display block
				width 100%
				font-size 15px
				font-family "Roboto", sans-serif
				color #FFFFFF
				text-transform uppercase

.overlay-map
  display none
  position absolute
  top 0 
  left 0
  width 100%
  height 100vh
  z-index 1006
  background-color #fff
  &--contenedor
    padding 30px 0
    width 90%
    height 100%
    margin 0 auto
    .cerrar
      width 100px
      height 35px
      background-color rgb(6,71,192)
      color #fff
      text-align center
      line-height 35px
      font-size 14px
      border-radius 4px
      font-family "Roboto", sans-serif
      text-transform uppercase
      cursor 
    iframe
      width 100%
      margin 15px 0
    p
      font-size 14px
      font-family "Roboto", sans-serif
      margin 4px 0
      color rgb(6,71,192)    

@media (min-width 768px)

  .overlay-reserva
    &--contenedor
      .cerrar, .ubicacion
        top 25px
        right 30px
        width 50px
        height 50px
        line-height 70px
      .ubicacion
        left 25px  

  .contenedor-reservas
    margin 0

  .contenedor-reservas--formulario
    width 500px
    h1
      font-size 32px
    form
      display -webkit-flex
      display -moz-flex
      display -ms-flexbox
      display -o-flex
      display flex
      justify-content space-between
      flex-wrap wrap
      font-size 17px

  .contenedor-campo
    width 47%
    &:nth-child(7)
      width 100%
    input, select
      width 100%
      height 40px
      margin-top 6px
      padding 0 3px
      font-size 16px
    select
      height 43px  

@media (min-width 992px)

  header
    background-color transparent
    background-image linear-gradient(150deg, transparent 60%, rgba(38,50,56,0.1))

  .header-content
    .header-logo
      h1
        font-size 35px

  .icon-menu--content
    display none

  .overlay-menu
    display block
    position absolute
    top 28px
    left inherit
    right 50px
    width 600px
    height 45px
    z-index 10
    background-color transparent

  nav.menu-options
    top 0
    margin-top 0
    ul
      margin 0
      width 600px
      height 45px
      display -webkit-flex
      display -moz-flex
      display -ms-flexbox
      display -o-flex
      display flex
      justify-content flex-end
      li
        height 100%
        line-height 45px
        margin 0px
        width 15%
        text-align center
        a
          font-size 19px
          width 100%
          height 100%
          text-transform capitalize
          transition all .3s ease-in-out

  .slide-titulo
    font-size 55px

  .ofertas-content
    display -webkit-flex
    display -moz-flex
    display -ms-flexbox
    display -o-flex
    display flex
    justify-content center
    flex-wrap wrap
    h2
      width 100%
      text-align center
      font-size 55px
    .caja
      width 48%
      height auto
      padding 20px 0
      img
        height 300px
      .boton
        height 50px
        line-height 50px
        a
          font-size 18px  
