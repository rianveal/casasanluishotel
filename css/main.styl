
header
  position absolute
  width 100%
  height 100px
  z-index 9
  background-color: rgba(38,50,56,0.3)

.header-content
  width 100%
  height 100%
  display -webkit-flex
  display -moz-flex
  display -ms-flex
  display -o-flex
  display flex
  justify-content space-between
  .header-logo
    width 60%
    text-align center
    h1
      color #ffff00
      font-size 28px
      margin-top 34px
      margin-left 20px
      text-align justify
      font-family 'Great Vibes', cursive
      width 100%
  .header-menu--burger
    width 40%

.icon-menu--content
	width 25px
	height 18px
	cursor pointer
	outline none
	margin 41px 40px 0 auto
	display block

.icon-menu
	display inline-block
	margin-top 0
	outline none
	small
		display block
		border-radius 3em
		width 24px
		height 4px
		margin 0 0 3px 0
		background-color #ffff00
		transition all .3s ease-in-out
	&:hover
		outline none

.icon-menu--active
	small:nth-child(1)
		transform rotate(45deg) translateY(6px) translateX(4.5px)
		width 24px
		height 5px
		background-color #DA5555
	small:nth-child(2)
		width 0
		height 0
	small:nth-child(3)
		transform rotate(-45deg) translateY(-1px)		
		background-color #DA5555		
		width 24px
		height 5px

.overlay-menu
	position fixed
	top 0
	left 0
	width 100%
	height 100vh
	background-color rgba(0,0,0,0.85)
	z-index 7
	display none

nav.menu-options
	position absolute
	width 100%
	height auto
	top 50%
	margin-top -25%
	margin-left 0.1px
	ul
		padding 0
		margin 0
		text-align center
		li
			list-style none
			height 45px
			line-height 45px
			transition all 0.3s ease-in-out
			a
				display block
				width 100%
				height 100%
				text-decoration none
				color #ffff00
				font-size 23px
				font-weight 600
				text-transform uppercase
				transition all 0.3s ease-in-out
				font-family "Roboto", sans-serif
				&:hover
					transform scale(1.2)

.overlay
  display none

.slide-titulo
   //font-family 'Baloo Bhai', cursive
   font-family 'Great Vibes', cursive
   color #ffff00

.ofertas
  background-color #fff
  width 100%
  height 550px
  padding 55px 0
  position relative
	
.ofertas-content
	width 90%
	height 400px
	margin 0 auto
	h2
		font-family "Roboto", sans-serif
		font-size 30px
		text-align center
	.caja
		width 100%
		height 300px
		border-bottom 1px solid rgba(0,0,0,0.1)
		padding 10px 0
		margin-top 30px
		img
			width 100%
			height 250px 
		.boton
			margin-top 5px
			width auto
			height 40px
			line-height 40px
			background-color #F18F01
			border-radius 4px
			overflow hidden
			text-align center
			a
				text-decoration none
				display block
				width 100%
				font-size 15px
				font-family "Roboto", sans-serif
				color #FFFFFF
				text-transform uppercase





