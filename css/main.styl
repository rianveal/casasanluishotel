
.cabecera
  position absolute
  width 100%
  height 90px
  top 0
  left 0
  z-index 1000
  h1
    color rgb(6, 71, 192)
    font-size 28px
    margin-top 30px
    margin-left 10px
    text-align justify
    font-family: 'Staatliches', cursive
    width 240px
    border-bottom 1px solid rgb(6, 71, 192, 0.1)
  span
    position absolute
    top 25px
    right 15px
    background-color rgb(6, 71, 192)
    color #ffffff
    text-align center
    padding 4px 6px;
    border-radius 4px
    cursor pointer
    i
      font-size 25px
    p
      font-size 9px
      font-weight 700 
      font-family 'Roboto', sans-serif 
      text-transform uppercase

.overlay-reserva
  display none
  position absolute
  top 0
  left 0
  width 100%
  height 100vh
  background-color rgba(255,255,255,.96)
  z-index 1001
  overflow-y auto
  &--contenedor
    position relative
    width 100%
    height 100%
    //overflow-y auto
    .cerrar
      position fixed
      top 20px
      right 15px
      width 40px
      height 40px
      border-radius 50%
      background-color #da5555
      color #ffffff
      text-align center
      line-height 60px  
      z-index 1003
      cursor pointer

.contenedor-reservas
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  width 100%
  height auto
  margin 90px auto
  
.contenedor-reservas--formulario
  width 70%
  margin 0 auto 90px auto
  height 100%
  h1
    font-size 28px
    font-family 'Baloo Bhai', cursive
    color rgb(6, 71, 192)
    text-align center
  p
    font-size 16px
    font-family 'Roboto', sans-serif
    text-align center
  form
    margin-top 20px
    font-size 16px
    font-family 'Roboto', sans-serif

.contenedor-campo
  margin 14px 0
  > input, select
      width 100%
      height 35px
      border none
      border 1.5px solid rgba(0,0,0,.15)
      border-radius 4px
      margin-top 6px
      text-align center
      padding 0 3px
      transition all .3s ease-in-out
      &:focus
        border-color rgba(1,83,134,0.5)
        outline 0px
  > select
    height 40px
    padding 0
    width 103%
  > button
    border none
    border-radius 4px
    background-color rgb(6, 71, 192)
    color #ffffff
    width 100px
    height 40px
    font-family 'Roboto', sans-serif
    cursor pointer

.slide-titulo
   font-family 'Baloo Bhai', cursive

.contenedor-mensaje
  display none
  position absolute
  top 10px
  left 50%
  transform translate(-50%, 0)
  width 300px
  height auto
  padding 20px
  border-radius 4px
  background-color #263238
  z-index 1004
  p
    color #ffffff
    font-family 'Roboto', sans-serif
    font-size 16px
  
@media (min-width 768px)

  .cabecera
    h1
      margin-left 20px
      font-size 40px
      width 290px
    span
      top 25px
      right 20px
      padding 4px 8px
      i
        font-size 30px
      p
        font-size 13px

  .slide-titulo
    font-size 45px  

  .overlay-reserva
    &--contenedor
      .cerrar
        top 25px
        right 35px
        width 50px
        height 50px
        line-height 70px 

  .contenedor-reservas
    margin 0

  .contenedor-reservas--formulario
    width 500px
    h1
      font-size 32px
    form
      display flex
      justify-content space-between
      flex-wrap wrap
      font-size 18px

  .contenedor-campo
    width 47%
    &:nth-child(8)
      button
        margin-top 26px
        height 43px
        font-size 16px
        width 100%  
    > input, select
      width 100%
      height 40px
      margin-top 6px
      padding 0 3px
      font-size 16px 
    > select
      height 43px 

@media (min-width 1024px)

  .slide-titulo
    font-size 43px  

  .contenedor-reservas--formulario
    form
      font-size 16px

  
